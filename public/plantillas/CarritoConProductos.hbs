<br>
<h4 class="text-primary">Carrito de Compras</h4>
<br>
<!--input type="hidden" value="{{this._id}}" id="idCarrito"-->
{{#if productos.length}}
<div id="tableContainer" > 
    <h4 class="text-primary">Lista de Productos</h2>
    <div>
        <table class="table table-hover">
            <tr style="background-color:#f5f5f5;">
               <th>Id</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Foto</th>
                <th></th>
                <th></th>
            </tr>
            {{#each productos}}
            <tr>
               <td>{{this._id}}</td>
                <td>{{this.nombre}}</td>
                <td style="text-align:center">${{this.precio}}</td>
                <td style="text-align:center"><img width="50" src={{this.fotoUrl}} alt="not found" ></td>
                <td><button class="btn btn-toolbar" onclick="addRowToCart(this)"><i class="glyphicon glyphicon-shopping-cart" style="color:limegreen;font-size:20px;"></i></button></td>
                <td style="margin-left:-80px;"><button class="btn btn-toolbar"><i class="glyphicon glyphicon-floppy-remove" style="color:orangered;font-size:20px;"></i></button></td>
            </tr>
            {{/each}}
        </table>
    </div>
</div>
{{else}}
<div id="divMensajeSinProductos" class="alert alert-info text-center" style="width:100%">La lista de productos est√° vacia</div>
{{/if}}